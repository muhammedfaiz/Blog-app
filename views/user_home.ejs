<%- include("./header.ejs") %>

  <main class="container">
    <div class="row p-4">
      <!-- Example Post Card -->
      <% if(typeof data !== "undefined"){%>
        <% data.forEach((res)=>{%>
      <div class="col-12 pb-4">
        <div class="card">
          <div class="card-body d-flex justify-content-between flex-column">
            <h3 class="card-title"><%= res.title%></h3>
            <span class="card-date">posted by <%= res.userName %></span>
            <p class="card-text"><%= res.description%></p>
            <span class="card-date">posted on <%= res.date %></span><br>
            <div class="d-flex mt-3 mr-4 icons">
            
              <a href="/user/like/<%= res._id%>" id="like_<%= res._id %>" class="ms-2 me-2" onclick="userLike('<%= res._id %>')">
                <box-icon name='heart'></box-icon>
              </a>              
              <a href="#" class="me-2">
                <box-icon name='comment'></box-icon>
              </a>
              
              <a href="/user/readMore/<%= res._id%>" class="me-2">
                <box-icon name='file-find'></box-icon>
              </a>
            </div>
          </div>
        </div>
      </div>
      <%})}%>

      <!-- You can add more post cards dynamically through the backend -->
    </div>

  
  </main>
 

  <%- include("./footer.ejs") %>
