<%- include('./header.ejs')%>
  <div class="container py-4">
    <div class="row">
      <div class="col-md-8 mx-auto">
        <div class="card">
          <div class="card-header">
            <h3 class="card-title"><%= blog.title%></h3>
            <span class="card-date">Posted by <%= blog.userName%> on <%= blog.date%></span><br>
            
          </div>
          <div class="card-body">
            <p class="card-text"> Description: <%= blog.description%></p>
            <hr>
            <h4>Content:</h4>
            <p>
              <%= blog.content%>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

